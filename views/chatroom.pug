extends layout

block content
	.main-chat.container
		.row
			.row
				.col-md-12
					h1.chat-title.display-5 Happy Chatting #{username} :)
					.btn-toolbar.btn-logout
						form(action="/logout" method="POST")
							a#logout-btn.btn.btn-gray Logout
			.row.color-container
				.col-md-12
					label.submenu Choose your color:
					button#colorpicker
			ul#messages
			form(id="messaging-form" action="" class="form-horizontal")
				div.col-md-12
					div.input-group
						input#message.form-control(type="text" autocomplete="off" required autofocus placeholder="Your message here" name="message")
						input#username(type="hidden" value=username name="username")
						span.input-group-btn
							button#send-btn.btn.btn-red(type="submit") Send

block append scripts
	script(src='/src/chatroom.js', type='text/javascript')
