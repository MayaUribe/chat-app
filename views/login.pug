extends layout

block content
	.main.container
		.col-md-6.col-md-offset-3
			h1.display-4.m-b-2 Log In
			form(method='POST' action='/login')
				div.form-group.row
					label.col-sm-2.col-form-label.col-form-label-md.label(for="username") Username
					div.col-sm-8
						input(type="text" class="form-control form-control-md" id="username" placeholder="username" name="username")
					div.col-sm-2
						a.btn.btn-red(type='submit') Log in
